<div class = 'event_block' style = 'padding: 10px;'>
  <div class = 'event_block_small' style = 'padding: 10px'>
    <div style = 'font-size: xx-large; font-weight: bold;'>
      <%= 'Login'%>
    </div>
    <%= form_tag '/login' do %>   
      <%= label_tag :name %>   
      <%= text_field_tag :name %>   
      <%= submit_tag "Login"%>
    <%end%>

    <br> <%= "Or "%> <br>

    <%= button_to 'New User', new_user_path, method: :get %>
    <%= button_to 'See All Events', events_path, method: :get %>
  </div>
</div>